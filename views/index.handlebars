<h1>NICE BURGERS!</h1>

<h2>Burgers that cause diarrhea</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
        <h4>{{this.burger_name}}</h4>
        <button type="button" class="eat btn btn-danger" id="eat">Eat it</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that don't cause diarrhea</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <h6 class="burger-item">
        <h4>{{this.burger_name}}</h4>
        <button type="button" class="eat btn btn-danger" id="eat">Eat it</button>
    </h6>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Not yet<br>
    <input type="radio" name="devoured" value="0"> Yes Mam
  </div>

  <button type="submit">Add Burger</button>
</form>
