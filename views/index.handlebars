<div class="jumbotron">
  <h1>Welcome to Darren's Day Old Dogs!</h1>
</div>

<div class=row>

  <div class=col-4>
    <h2>Dogs that have not been tasted</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <div class="dogs text-center">
        <h4>&#x1F32D; {{this.burger_name}}</h4>
        <button class="eat btn btn-danger" data-id="{{id}}">Try it</button>
      </div>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class=col-4>
    <h2>Add a Dog</h2>
    <form class="create-form text-center">
      <div class="form-group">
        <label for="ca">DOG NAME:&nbsp;</label>
        <input type="text" id="burgerName" name="name">
      </div>
      <div class="form-group">
        <label for="devoured">DEVOURED?</label><br>
          <input type="radio" name="devoured" value="0" checked> Not yet &nbsp;
          <input type="radio" name="devoured" value="1"> Yes Mam
      </div>
      <button class="btn btn-danger" type="submit" id="submit">Add Dog</button>
    </form>
    <img class="text-center img-fluid" src="https://i.imgur.com/XtMxTPt.jpg?1" alt="Danger Dog">
  </div>

  <div class=col-4>
    <h2>Dogs that have been tasted</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <div class="dogs text-center">
        <h4>&#x1F92E; {{this.burger_name}}</h4>
        <button class="throwAway btn btn-danger text-center" data-id="{{id}}">Throw it away</button>
      </div>
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>