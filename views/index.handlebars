<h1>Welcome to Darren's Day Old Dogs!</h1>

<h2>Dogs that have not been tasted</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
        <span style='font-size:20px;'>
          <h4>&#x1F32D;{{this.burger_name}}</h4>
          <button class="eat btn btn-danger" data-id="{{id}}">Try it</button>
        </span>
    {{/unless}}
  {{/each}}
</ul>

<h2>Dogs that have been tasted</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <h6 class="burger-item">
        <span style='font-size:20px;'>
          <h4>&#x1F92E;{{this.burger_name}}</h4>
          <button class="throwAway btn btn-danger" data-id="{{id}}">Throw it away</button>
        </span>
    </h6>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Dog</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Dog Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Not yet<br>
    <input type="radio" name="devoured" value="1"> Yes Mam
  </div>

  <button type="submit" id="submit">Add Dog</button>
</form>

<script>
  $("#submit").on("click", function(event){
    event.preventDefault();
    let burgerName = $("#burgerName").val();
    let devoured = $("[name=devoured]:checked").val().trim()

    let newBurger = {
      burger_name: burgerName,
      devoured: devoured
    }
    $.ajax("/api/burgers",{
      type: "POST",
      data: newBurger
    }).then(function(){
      alert("you have added a dog")
      location.reload();
    })
  })

  $(".eat").on("click", function(event) {
    var id = $(this).data("id");
   
    var burgerEaten = {
      devoured: 1
    };

    $.ajax("/api/burgers/" + id, {
      type: "PUT",
      data: burgerEaten
    }).then(
      function() {
        alert("You don't feel so good now");
        location.reload();
      }
    );
  });

  $(".throwAway").on("click", function(event) {
    var id = $(this).data("id");
    
    $.ajax("/api/burgers/" + id, {
      type: "DELETE"
    }).then(
      function() {
        alert("You don't want this dog");
        location.reload();
      }
    );
  });

</script>
